<div class="container">
    <h1>Tasks</h1>
    <ul>
    <% @tasks.each do |task|  %>
        <li><%=task.completed%><%= link_to task.title, task_path(task)%> <%= link_to "🗑️", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
    <%end  %>
    </ul>
    <button class ="btn btn-info"><%= link_to "Create", new_task_path  %></button>
</div>